
@{
    var dB = new GroceryHomeEntities();
    var model = dB.tbl_LoaiSanPham.Where(d => d.Id != 0).ToList();

}

<div class="navbar navbar-fixed-top col-lg-3" style="background-color:#1733a4; color: white;
                            border-radius:5px; font-weight:bold;
                            margin-top:50px; padding-top:5px; padding-bottom:20px; ">
    <h3 style="text-align:center; background-color:#ff0000; ">Danh mục sản phẩm</h3>
    <div class="navbar-collapse collapse">
        <ul class="nav">
            @{ foreach (var item in model)
            {
                    <li>
                        <a href="#LoaiSP_@item.Id">@item.LoaiSP</a>
                    </li>
                }}
        </ul>
    </div>
</div>

